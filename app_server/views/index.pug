extends layout

block content

    main(role='main')
        section.jumbotron.text-center
            .container
                h1.jumbotron-heading Vietnamese New Year (Tet)
                p.lead.text-muted Explore some interesting facts about Tet holiday
        .album.py-5.bg-light
            .container
                .row
                    .col-md-4
                        .card.mb-4.box-shadow
                            img.card-img-top(src='/images/food.jpg', alt='Image')
                            .card-body
                                p.card-text Essential Foods for Tet holiday.
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        a(href='/food'): button.btn.btn-sm.btn-outline-secondary(type='button') View
                    .col-md-4
                        .card.mb-4.box-shadow
                            img.card-img-top(src='/images/hoa.png', alt='Image')
                            .card-body
                                p.card-text New Year's flowers and plants.
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        a(href='/flowers'): button.btn.btn-sm.btn-outline-secondary(type='button') View
                    .col-md-4
                        .card.mb-4.box-shadow
                            img.card-img-top(src='/images/ngaytet.jpg', alt='Image')
                            .card-body
                                p.card-text Some tradional dates in Tet holiday.
                                .d-flex.justify-content-between.align-items-center
                                    .btn-group
                                        a(href='/dates'): button.btn.btn-sm.btn-outline-secondary(type='button') View

